// Задача 16: Дано число обозначающее день недели. Выяснить является номер дня недели выходным

Console.Write("Введите число от 1 до 7: ");
string weekday = Console.ReadLine();

if(weekday.ToLower() == "1")
{
    Console.WriteLine("Понедельник - не выходной.");
}
if(weekday.ToLower() == "2")
{
    Console.WriteLine("Вторник - не выходной.");
}
if(weekday.ToLower() == "3")
{
    Console.WriteLine("Среда - не выходной.");
}
if(weekday.ToLower() == "4")
{
    Console.WriteLine("Четверг - не выходной.");
}
if(weekday.ToLower() == "5")
{
    Console.WriteLine("Пятница- не выходной.");
}
if(weekday.ToLower() == "6")
{
    Console.WriteLine("Суббота - это выходной! Есть время расслабиться.");
}
if(weekday.ToLower() == "7")
{
    Console.WriteLine("Воскресенье - выходной, но завтра уже на работу.");
}
else
{
    Console.WriteLine("Попробуй еще раз!");
}
